                app:layout_constraintBottom_toBottomOf="@id/item10"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="TextContrastCheck" />


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/item1"
                style="@style/Widget.Priceelist.TextInput.Items2"
                android:layout_marginTop="1dp"
                android:importantForAutofill="no"
                android:inputType="textAutoCorrect|text|textCapSentences"
                android:maxLength="@integer/input_max_length"
                app:layout_constraintStart_toEndOf="@id/sn1"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                tools:text="Pack of Chocolates Kit Kat" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/unit1"
                style="@style/Widget.Priceelist.TextInput.Units2"
                android:layout_marginTop="1dp"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:maxLength="@integer/qty_max_length_in"
                app:layout_constraintEnd_toStartOf="@id/amount1"
                app:layout_constraintStart_toEndOf="@id/item1"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                tools:text="10011" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/amount1"
                style="@style/Widget.Priceelist.TextInput.Amounts2"
                android:layout_marginTop="1dp"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:maxLength="@integer/price_max_length"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                tools:text="12756789" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_001"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item1" />


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/item2"
                style="@style/Widget.Priceelist.TextInput.Items2"
                android:layout_marginTop="1dp"
                android:importantForAutofill="no"
