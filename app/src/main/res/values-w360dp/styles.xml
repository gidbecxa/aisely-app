<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Widget.Priceelist.TextInputLayout.Title" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:minHeight">32dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">textAutoComplete|textAutoCorrect|textCapSentences|text|textShortMessage</item>
        <item name="android:padding">2dp</item>
        <item name="android:hint">@string/title</item>
        <item name="boxStrokeColor">@color/primary1</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="boxCornerRadiusTopStart">@dimen/box_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/box_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/box_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/box_corner_radius</item>
        <item name="hintTextColor">@color/gray_001</item>
    </style>

    <style name="Widget.Priceelist.TextView.Title2" parent="Widget.MaterialComponents.TextView">
        <item name="android:minHeight">32dp</item>
        <item name="android:gravity">start|bottom</item>
