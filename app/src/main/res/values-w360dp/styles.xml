    <style name="Widget.Priceelist.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:buttonCornerRadius" tools:targetApi="p">12dp</item>
    </style>

    <style name="TextAppearance.Priceelist" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/poppins</item>
